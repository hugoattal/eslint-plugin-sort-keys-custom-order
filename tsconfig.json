{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "types": [
            "vitest/globals",
            "vite/client"
        ],
        "outDir": "dist",
        "declaration": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist"
    ]
}
